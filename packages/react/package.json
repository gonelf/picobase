{
  "name": "@picobase_app/react",
  "version": "0.1.0",
  "description": "PicoBase React components â€” drop-in auth UI and hooks",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean --external react --external react-dom --external @picobase_app/client",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch --external react --external react-dom --external @picobase_app/client",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@picobase_app/client": "^0.1.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.1.0",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitest/ui": "^2.1.8",
    "jsdom": "^25.0.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "picobase",
    "react",
    "auth",
    "components",
    "hooks"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gonelf/picobase",
    "directory": "packages/react"
  }
}