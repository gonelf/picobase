{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "src",
    "lib": ["ES2020", "DOM"],
    "baseUrl": ".",
    "paths": {
      "pocketbase": ["./vendor/pocketbase"]
    }
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
